extends layout 

block content 
  h1=title
  h2=car.name
  p Are you sure you want to delete this car?

  form(method="post") 
    input(type="hidden" name='car_id' value=car._id)
    label(for="admin_password" name="admin_password") Admin Password: 
    input(type="text" name='admin_password') 
    button(type="submit") Delete this car