extends layout 

block content 
  h1=title

  form(method='POST')
    label(for="brand_name") Brand name:
    input(type="text" name="brand_name" placeholder="Mitsubitchi, Toyota..." required value=(brand===undefined ? "" : brand.name))
    button(type="submit") Create  

  if errors 
    each error in errors 
      li!= error